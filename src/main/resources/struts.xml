<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.custom.i18n.resources" value="globalMessages"/>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.extension" value=","/>
    <constant name="struts.configuration.xml.reload" value="true" />
    <constant name="struts.action.excludePattern" value="/static/.*?"/>

    <package name="plantTicket" extends="struts-default" namespace="/">
        <interceptors>
            <interceptor name="loginInterceptor" class="top.yzlin.homework.interceptor.LoginInterceptor"/>
        </interceptors>

        <default-action-ref name="index"/>

        <action name="index" class="loginAction" method="index">
            <result name="success">/WEB-INF/content/login-register.jsp</result>
        </action>

        <action name="changePassword" class="changePasswordAction" method="page">
            <interceptor-ref name="loginInterceptor"/>
            <interceptor-ref name="defaultStack"/>
            <result name="login">/WEB-INF/content/login-register.jsp</result>
            <result name="success">/WEB-INF/content/change-password.jsp</result>
        </action>

        <action name="changeNewPassword" class="changePasswordAction" method="changePassword">
            <interceptor-ref name="loginInterceptor"/>
            <interceptor-ref name="defaultStack"/>
            <result name="login">/WEB-INF/content/login-register.jsp</result>
            <result name="success">/WEB-INF/content/login-register.jsp</result>
            <result name="input">/WEB-INF/content/change-password.jsp</result>
        </action>


        <action name="login" class="loginAction" method="login">
            <result name="input">/WEB-INF/content/login-register.jsp</result>
            <result name="buyTicket" type="chain">buyTicket</result>
        </action>

        <action name="loginOut" class="loginAction" method="loginOut">
            <result name="success" >/WEB-INF/content/login-register.jsp
            </result>
        </action>

        <action name="register" class="loginAction" method="register">
            <result name="input">/WEB-INF/content/login-register.jsp</result>
            <result name="success">/WEB-INF/content/login-register.jsp
            </result>
        </action>

        <action name="buyTicket" class="plantTicket" method="buyTicket">
            <interceptor-ref name="loginInterceptor"/>
            <interceptor-ref name="defaultStack"/>
            <result name="login">/WEB-INF/content/login-register.jsp
            </result>
            <result name="success">/WEB-INF/content/buy-ticket.jsp</result>
        </action>

        <action name="doBuyTicket" class="plantTicket" method="doBuyTicket">
            <interceptor-ref name="loginInterceptor"/>
            <interceptor-ref name="defaultStack"/>
            <result name="login">/WEB-INF/content/login-register.jsp</result>
            <result name="input">/WEB-INF/content/buy-ticket.jsp</result>
            <result name="success">/WEB-INF/content/show-ticket.jsp</result>
        </action>

        <action name="showTicket" class="plantTicket" method="showTicket">
            <interceptor-ref name="loginInterceptor"/>
            <interceptor-ref name="defaultStack"/>
            <result name="login" >/WEB-INF/content/login-register.jsp
            </result>
            <result name="success">/WEB-INF/content/show-ticket.jsp</result>
        </action>

        <action name="searchTicket" class="searchTicket">
            <interceptor-ref name="loginInterceptor"/>
            <interceptor-ref name="defaultStack"/>
            <result name="login">/WEB-INF/content/login-register.jsp
            </result>
            <result name="success">/WEB-INF/content/show-ticket.jsp</result>
        </action>
    </package>

    <package name="api" extends="json-default" namespace="/v1/api">
        <action name="deleteTicket" class="apiAction" method="deleteTicket">
            <result name="success" type="json"/>
        </action>
        <action name="changeTicket" class="apiAction" method="changeTicket">
            <result name="success" type="json"/>
        </action>
    </package>
</struts>